{
  "name": "RustPress Enterprise",
  "version": "1.0.0",
  "description": "A professional enterprise-grade theme with full RustPress data integration",
  "author": "RustPress Team",
  "license": "MIT",
  "homepage": "https://rustpress.dev/themes/enterprise",
  "preview": "preview.png",
  "features": [
    "responsive",
    "dark-mode",
    "blog",
    "products",
    "newsletter",
    "seo-optimized"
  ],
  "templates": {
    "index": "templates/index.html",
    "post": "templates/post.html",
    "page": "templates/page.html",
    "category": "templates/category.html",
    "product": "templates/product.html",
    "search": "templates/search.html",
    "404": "templates/404.html"
  },
  "assets": {
    "css": ["assets/css/main.css"],
    "js": ["assets/js/main.js"]
  },
  "colors": {
    "primary": "#3b82f6",
    "secondary": "#8b5cf6",
    "accent": "#06b6d4",
    "background": "#f9fafb",
    "text": "#111827"
  },
  "fonts": {
    "heading": "Inter",
    "body": "Inter"
  },
  "dataBindings": {
    "description": "This theme uses window.RustPress for data access",
    "availableData": [
      "site - Site configuration (name, tagline, description, logo, social)",
      "posts - All published posts with author, category, tags",
      "recentPosts - Latest 5 posts",
      "featuredPosts - Posts marked as featured",
      "popularPosts - Posts sorted by views",
      "categories - All categories with post counts",
      "tags - All tags with post counts",
      "authors - All authors with profiles",
      "menus - Navigation menus (header, footer, mobile)",
      "products - E-commerce products with pricing",
      "pages - Static pages (about, contact, etc.)",
      "currentUser - Logged in user info (if authenticated)",
      "pagination - Current page pagination info",
      "breadcrumbs - Navigation breadcrumbs"
    ],
    "helpers": [
      "RustPress.helpers.formatDate(date, format)",
      "RustPress.helpers.truncate(str, length)",
      "RustPress.helpers.formatPrice(price, currency)",
      "RustPress.helpers.getPostUrl(post)",
      "RustPress.helpers.getCategoryUrl(category)",
      "RustPress.helpers.getTagUrl(tag)",
      "RustPress.helpers.getProductUrl(product)",
      "RustPress.helpers.getMenu(location)",
      "RustPress.helpers.getPostsByCategory(slug)",
      "RustPress.helpers.getPostsByTag(slug)"
    ],
    "events": [
      "rustpress:ready - Fired when data context is loaded"
    ]
  }
}
